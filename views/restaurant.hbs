<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h3 class="card-title text-center">{{title}}</h3>
                    <hr class="my-4">
                    <form class="form-signin" action="/restaurant" method="post">
                        <div class="form-label-group">
                            <input type="name" name="name" id="name" class="form-control" placeholder="Name" required autofocus>
                        </div>
                        <hr class="my-4">
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Search</button>
                        <hr class="my-4">
                        <!--                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>-->
                        <!--                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign in with Facebook</button>-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>