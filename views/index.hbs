<div class="container">
    <div class="row search-card">
        <div class="col-sm-10 mx-auto">
            <div class="card search-card text-center">
				
                <h3>Find a Place to Eat</h3>
                <!-- Search form -->
                <form action="/search/name" method="get">
					
                    <div class="active-red mb-4">
                        <input type="text" class="form-control" name="restaurantname" placeholder="Restaurant Name" aria-label="Search">
                        <button type="submit"><span class="oi oi-magnifying-glass"></span></button>
                    </div>
					
                </form>
				
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row search-card">
        <div class="col-sm-10 mx-auto">
            <div class="card search-card text-center">
				
                <h3></h3>
                <!-- Search form -->
                <form action="/map" method="get">
                    <div class="active-red mb-4">
						
                        <input type="number" pattern="[0-9]{5}" class="form-control" name="searchzip" placeholder="Zip Code" aria-label="Search">
                        <button type="submit"><span class="oi oi-globe"></span></button>
						
                    </div>
                </form>
				
                <div class="card text-center">
                    <iframe width="600" height="450" frameborder="0" style="border:0"
